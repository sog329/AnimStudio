<?xml version="1.0" encoding="utf-8"?>
<com.sunshine.studio.base.ItemContainer xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="10dp"
  android:foreground="@drawable/ripple_card"
  app:cardCornerRadius="16dp"
  app:cardElevation="16dp">

  <com.sunshine.engine.particle.SceneView
    android:id="@+id/scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <com.sunshine.engine.bone.StageView
    android:id="@+id/stage"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <com.sunshine.studio.base.StudioTv
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/tv_bg"
    android:gravity="center"
    android:textColor="@android:color/white" />

  <include layout="@layout/layout_number" />
</com.sunshine.studio.base.ItemContainer>