<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10px"
    android:paddingRight="10px">

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="from["
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioEt
        android:id="@+id/scale_from_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/tv_color"
        android:tooltipText="发射缩放范围，From"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text=","
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioEt
        android:id="@+id/scale_from_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/tv_color"
        android:tooltipText="发射缩放范围，To"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="], "
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:id="@+id/scale_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_p"
        android:gravity="center"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:textColor="@color/tv_color2"
        android:tooltipText="✅：右侧为终止缩放范围\n❌：保持初始缩放不变"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="["
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioEt
        android:id="@+id/scale_to_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/tv_color"
        android:tooltipText="终止缩放范围，From"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text=","
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioEt
        android:id="@+id/scale_to_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/tv_color"
        android:tooltipText="终止缩放范围，To"
        attrs:scale=".5" />

    <com.sunshine.studio.base.StudioTv
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="]"
        android:textColor="@color/tv_color2"
        attrs:scale=".5" />

    <include
        android:id="@+id/scale_interpolator"
        layout="@layout/layout_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center" />
</LinearLayout>