<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="label">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_label</item>
    </style>

    <style name="Purple" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/tv_color2</item>
        <item name="colorControlActivated">@color/btn_bg2</item>
    </style>

    <style name="Indigo" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/tv_color2</item>
        <item name="colorControlActivated">@color/btn_bg_p2</item>
    </style>
</resources>
