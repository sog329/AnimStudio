<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainAct">

    <com.sunshine.studio.base.ShimmerView
        android:id="@+id/bone_demo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="@drawable/ripple_card"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <com.sunshine.engine.bone.StageView
            android:id="@+id/bone_demo_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.sunshine.studio.base.StudioTv
            android:id="@+id/bone_demo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:textColor="@android:color/white"
            android:text="Bone\nDemo"
            android:textStyle="bold" />
    </com.sunshine.studio.base.ShimmerView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"

        android:orientation="vertical">

        <com.sunshine.studio.base.ShimmerView
            android:id="@+id/bone_studio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:foreground="@drawable/ripple_card"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <com.sunshine.engine.bone.StageView
                android:id="@+id/bone_studio_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.sunshine.studio.base.StudioTv
                android:id="@+id/bone_studio_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:textColor="@android:color/white"
                android:text="Bone\nStudio"
                android:textStyle="bold" />
        </com.sunshine.studio.base.ShimmerView>

        <LinearLayout
            android:id="@+id/test_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="horizontal">

            <com.sunshine.studio.base.StudioBoneBtn
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20px"
                android:layout_marginBottom="-20px" />

            <com.sunshine.studio.base.StudioTv
                android:id="@+id/test_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-20px"
                android:gravity="center"
                android:text="Test"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.sunshine.studio.base.ShimmerView
            android:id="@+id/particle_studio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:foreground="@drawable/ripple_card"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">


            <com.sunshine.engine.bone.StageView
                android:id="@+id/particle_studio_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.sunshine.studio.base.StudioTv
                android:id="@+id/particle_studio_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:textColor="@android:color/white"
                android:text="Particle\nStudio"
                android:textStyle="bold" />
        </com.sunshine.studio.base.ShimmerView>
    </LinearLayout>


    <com.sunshine.studio.base.ShimmerView
        android:id="@+id/particle_demo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="@drawable/ripple_card"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <com.sunshine.engine.particle.SceneView
            android:id="@+id/particle_demo_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.sunshine.studio.base.StudioTv
            android:id="@+id/particle_demo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="Particle\nDemo"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </com.sunshine.studio.base.ShimmerView>
</LinearLayout>
